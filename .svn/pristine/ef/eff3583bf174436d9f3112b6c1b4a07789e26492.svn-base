                }else if(i==2){
                  api.sendEvent({
                      name: 'reloadnav'
                  });
                }


            }else{
                $api.removeCls(eFootLis[i], 'active');
                $api.removeCls(eHeaderLis[i], 'active');
                api.setFrameAttr({
                    name: htmlnamenum[i],
                    hidden: true
                });
                api.setFrameGroupAttr({
                    name: htmlnamenum[i],
                    hidden: true
                });
                // api.setFrameGroupAttr({
                //     name: htmlnamenum[],
                //     hidden: true
                // });

            }
        }
        api.setFrameAttr({
            name: htmlnamenum[1],
            hidden: true
        });
        $api.addCls( eFootLis[index], 'active');
        $api.addCls( eHeaderLis[index], 'active');
        // api.setFrameGroupIndex({
        //     name: 'group',
        //     index: index
        // });
    }

