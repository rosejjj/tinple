* {
padding: 0px;
margin: 0px;
}
a {
text-decoration: none;
color: white;
}
ul {
list-style: none;
}
.wrap{
position: relative;
height: 100%;
width: 100%;
overflow: hidden;
}
.slider {
position: relative;
width: 100%;
height: 70%;
margin: auto;
overflow: hidden;
}
.slider-right{
position: absolute;
top: 19%;
left: 36%;
height: 100%;
width: 100%;
}
.slider-panel img{
  position: relative;
  left:350px;
  height: 93%;
  width: 93%;
}
.slider-top{
position: absolute;
top: 18%;
left: 15px;
height: 100%;
width: 100%;
}
.slider-pane4 img{
  position: relative;
  left:350px;
  height: 50px;
  width: 50px;
}
.slider-extra {
height: 5%;
position: relative;
margin: 0 auto;
}
.slider-panel,.slider-pane2,.slider-pane3,.slider-pane4{
position: absolute;
z-index: 8;
}
.slider-nav {
margin:auto;
position: absolute;
left: 37%;
bottom: 0;
}
.slider-nav li {
height: 10px;
width: 10px;
background: gray;
border-radius: 30px;
float: left;
margin: 10px;
opacity: 0.4
}
.footer{
position: absolute;
bottom: 0;
height: 20%;
width: 100%;
margin: 0 auto;
}
.slider-nav .slider-item-selected {
background: black;
opacity: 1;
}
.wechat{
height: 40px;
width: 89%;
border-radius: 30px;
margin: 0 auto;
background: black;
color: white;
text-align: center;
line-height: 41px;
letter-spacing: 3px;
font-size: 15px;
font-weight: bold;
}
.sign,.login{
height: 40px;
width: 40%;
background: gray;
border-radius: 30px;
text-align: center;
line-height: 41px;
color: white;
font-size: 15px;
letter-spacing: 3px;
font-weight: bold;
}
.sign{
float: left;
margin-left: 6%;
}
.login{
float: right;
margin-right: 6%;
}
.footer-bottom{
margin: 4% auto ;
overflow: hidden;
}
 .sign:active,.login:active,.wechat:active,.send:active,.next:active{
  opacity: 0.5
}
