	<title>guide1</title>
	<style type="text/css">
		*{
			padding:0;
			margin:0;
		}
		body{
			width:100vw;
			height:100vh;
		}
		.bg{
			width:100vw;
			height:100vh;
			background-color:#000;
			opacity: 0.8;
			animation:bganimation 1s linear 0s 1 normal;
			-webkit-animation: bganimation 1s linear 0s 1 normal;
			-ms-animation: bganimation 1s linear 0s 1 normal;
			-o-animation: bganimation 1s linear 0s 1 normal;
			-moz-animation: bganimation 1s linear 0s 1 normal;
		}
		.chatbox{
			position: fixed;
			top:19.41vw;
			left:50%;
			margin-left:-47.34vw;
			width:94.68vw;
			height:18.62vw;
			background-color:#fff;
			border-radius: 1.33vw;
		}
		.avatar{
			position: absolute;
			top:2.66vw;
			left:2.66vw;
			width:13.3vw;
			height:13.3vw;
			background:url(../../icon/share/logo-icon.png) no-repeat;
			background-size: cover;
		}
		.chatbox>span:nth-child(2){
			position: absolute;
			top:4.52vw;
			left:19.95vw;
			font:3.19vw/4.52vw Arial;
			font-weight: bold;
		}
		.chatbox>span:nth-child(3){
			position: absolute;
			top:10.11vw;
			left:19.95vw;
			font:3.19vw/4.52vw Arial;
			color:#f381a3;
			font-weight: bold;
		}
		.chatbox>span>span{
			display: inline-block;
			width:3.99vw;
			height:3.99vw;
			background-color: #f381a3;
			vertical-align: top;
			background:url(../../icon/messages/du.png) no-repeat;
			background-size:cover;
			margin-right:1.33vw;
		}
		.textbox{
			position: fixed;
			top:51.86vw;
			width:100vw;
			height:auto;
		}
		.textbox>.arrow{
			position: absolute;
			top: -11vw;
			left:10.64vw;
			width:10.64vw;
			height:10.64vw;
			background:url(../../icon/guide/arrow1.png) no-repeat;
			background-size:contain;
			transform: rotate(0deg);
		}
		.arrow2{
			position: absolute;
			top: 45vw;
			left:25.64vw;
			width:10.64vw;
			height:10.64vw;
			background:url(../../icon/guide/arrow1.png) no-repeat;
			background-size:contain;
			transform: rotate(87deg);
			display: none;
		}
		.textbox p{
			margin-left:24.47vw;
			font:3.99vw/5.85vw Arial;
			font-weight: bold;
			color:#fff;
		}
		.textbox p span{
			color:#f381a3;
		}
		.ps{
			margin-top:48vw;
			display: none;
		}
		.buttom{
			position: fixed;
			bottom:10.64vw;
			left:50%;
			margin-left:-29.655vw;
			width:59.31vw;
			height:10.64vw;
			border:2px solid rgba(255,255,255,1);
			border-radius: 7.99vw;
			font:3.99vw/10.64vw Arial;
			font-weight: bold;
			text-align: center;
			color:#fff;
		}
		@keyframes bganimation{
			0%{
				opacity: 0;
			}
			100%{
				opacity: 0.8;
			}
		}
		@-webkit-keyframes bganimation{
			0%{
				opacity: 0;
			}
			100%{
				opacity: 0.8;
			}
		}
		@-ms-keyframes bganimation{
			0%{
				opacity: 0;
			}
			100%{
				opacity: 0.8;
			}
		}
		@-o-keyframes bganimation{
			0%{
				opacity: 0;
			}
			100%{
				opacity: 0.8;
			}
		}
		@-moz-keyframes bganimation{
			0%{
				opacity: 0;
			}
			100%{
				opacity: 0.8;
			}
		}
	</style>
</head>
<body>
